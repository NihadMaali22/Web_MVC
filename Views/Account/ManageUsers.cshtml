@model IEnumerable<lily.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    @await Html.PartialAsync("_Notifications")

    <div class="flex flex-col md:flex-row justify-between items-center mb-8">
        <div>
            <h1 class="text-4xl font-bold text-gray-800 mb-2">
                <i class="fas fa-users-cog text-primary"></i> Manage Users
            </h1>
            <p class="text-gray-600">View and manage all registered users</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gradient-to-r from-primary to-secondary text-white">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-semibold">User ID</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Username</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Full Name</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Email</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Role</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Created Date</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var user in Model)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    #@user.UserID
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                    <i class="fas fa-user text-gray-400 mr-1"></i> @user.Username
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-700">@user.FullName</td>
                                <td class="px-6 py-4 text-sm text-gray-700">
                                    <i class="fas fa-envelope text-gray-400 mr-1"></i> @user.Email
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-3 py-1 rounded-full text-xs font-semibold
                                        @(user.Role == "Admin" ? "bg-red-100 text-red-800" : "bg-blue-100 text-blue-800")">
                                        @user.Role
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                    @user.CreatedDate?.ToString("MM/dd/yyyy")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                                    <button class="inline-flex items-center px-3 py-1 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors"
                                            title="Edit User">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="inline-flex items-center px-3 py-1 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors"
                                            title="Delete User">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="bg-gray-50 px-6 py-4 border-t">
                <p class="text-sm text-gray-600">
                    <i class="fas fa-info-circle mr-1"></i>
                    Total Users: <strong>@Model.Count()</strong>
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-20 bg-white rounded-2xl shadow-lg">
            <i class="fas fa-users text-gray-300 text-8xl mb-6"></i>
            <h3 class="text-2xl font-bold text-gray-700 mb-4">No users found</h3>
            <p class="text-gray-500">There are no registered users in the system.</p>
        </div>
    }

    <div class="mt-6">
        <a asp-controller="Home" asp-action="Dashboard" 
           class="inline-block px-6 py-3 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition-colors">
            <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
        </a>
    </div>
</div>

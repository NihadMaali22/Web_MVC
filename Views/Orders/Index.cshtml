@model IEnumerable<lily.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    @await Html.PartialAsync("_Notifications")

    <div class="flex flex-col md:flex-row justify-between items-center mb-8">
        <div>
            <h1 class="text-4xl font-bold text-gray-800 mb-2">
                <i class="fas fa-shopping-bag text-primary"></i> 
                @(ViewBag.IsAdmin == true ? "All Orders" : "My Orders")
            </h1>
            <p class="text-gray-600">Manage and track your orders</p>
        </div>
        <a asp-action="Create" 
           class="mt-4 md:mt-0 px-6 py-3 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300">
            <i class="fas fa-plus-circle mr-2"></i> New Order
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gradient-to-r from-primary to-secondary text-white">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Order ID</th>
                            @if (ViewBag.IsAdmin == true)
                            {
                                <th class="px-6 py-4 text-left text-sm font-semibold">Customer</th>
                            }
                            <th class="px-6 py-4 text-left text-sm font-semibold">Toy Name</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Quantity</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Total Price</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Order Date</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Status</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var order in Model)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    #@order.OrderID
                                </td>
                                @if (ViewBag.IsAdmin == true)
                                {
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        <i class="fas fa-user text-gray-400 mr-1"></i> @order.User.Username
                                    </td>
                                }
                                <td class="px-6 py-4 text-sm text-gray-700">@order.Toy.ToyName</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@order.Quantity</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-primary">
                                    $@order.TotalPrice.ToString("F2")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                    @order.OrderDate?.ToString("MM/dd/yyyy")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-3 py-1 rounded-full text-xs font-semibold
                                        @(order.Status == "Completed" ? "bg-green-100 text-green-800" : 
                                          order.Status == "Pending" ? "bg-yellow-100 text-yellow-800" : 
                                          order.Status == "Cancelled" ? "bg-red-100 text-red-800" : "bg-blue-100 text-blue-800")">
                                        @order.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                                    <a asp-action="Details" asp-route-id="@order.OrderID" 
                                       class="inline-flex items-center px-3 py-1 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
                                        <i class="fas fa-eye mr-1"></i> View
                                    </a>
                                    @if (ViewBag.IsAdmin == true)
                                    {
                                        <a asp-action="Delete" asp-route-id="@order.OrderID" 
                                           class="inline-flex items-center px-3 py-1 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors">
                                            <i class="fas fa-trash-alt mr-1"></i> Delete
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-20 bg-white rounded-2xl shadow-lg">
            <i class="fas fa-shopping-bag text-gray-300 text-8xl mb-6"></i>
            <h3 class="text-2xl font-bold text-gray-700 mb-4">No orders found</h3>
            <p class="text-gray-500 mb-6">You haven't placed any orders yet.</p>
            <a asp-controller="Toys" asp-action="Index" 
               class="inline-block px-8 py-3 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
                <i class="fas fa-shopping-cart mr-2"></i> Browse Toys
            </a>
        </div>
    }
</div>

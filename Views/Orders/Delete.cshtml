@model lily.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    @await Html.PartialAsync("_Notifications")
    
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
        <!-- Warning Header -->
        <div class="bg-red-500 text-white p-6">
            <div class="flex items-center">
                <i class="fas fa-exclamation-triangle text-4xl mr-4"></i>
                <div>
                    <h1 class="text-3xl font-bold">Delete Order</h1>
                    <p class="text-red-100">Are you sure you want to delete this order?</p>
                </div>
            </div>
        </div>

        <!-- Order Details -->
        <div class="p-8">
            <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-6">
                <div class="flex">
                    <i class="fas fa-exclamation-circle text-yellow-500 text-xl mr-3 mt-1"></i>
                    <p class="text-yellow-700">
                        <strong>Warning:</strong> This action cannot be undone. The order will be permanently removed from the system.
                    </p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-4">Order Information</h3>
                    <dl class="space-y-3">
                        <div class="flex justify-between border-b pb-2">
                            <dt class="text-gray-600">Order ID:</dt>
                            <dd class="font-semibold text-gray-800">#{Model.OrderID}</dd>
                        </div>
                        <div class="flex justify-between border-b pb-2">
                            <dt class="text-gray-600">Order Date:</dt>
                            <dd class="font-semibold text-gray-800">@Model.OrderDate?.ToString("MMMM dd, yyyy")</dd>
                        </div>
                        <div class="flex justify-between border-b pb-2">
                            <dt class="text-gray-600">Status:</dt>
                            <dd>
                                <span class="px-3 py-1 rounded-full text-sm font-semibold
                                    @(Model.Status == "Completed" ? "bg-green-100 text-green-800" : 
                                      Model.Status == "Pending" ? "bg-yellow-100 text-yellow-800" : 
                                      Model.Status == "Cancelled" ? "bg-red-100 text-red-800" : "bg-blue-100 text-blue-800")">
                                    @Model.Status
                                </span>
                            </dd>
                        </div>
                    </dl>
                </div>

                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-4">Customer & Product</h3>
                    <dl class="space-y-3">
                        <div class="flex justify-between border-b pb-2">
                            <dt class="text-gray-600">Customer:</dt>
                            <dd class="font-semibold text-gray-800">@Model.User.FullName</dd>
                        </div>
                        <div class="flex justify-between border-b pb-2">
                            <dt class="text-gray-600">Username:</dt>
                            <dd class="font-semibold text-gray-800">@Model.User.Username</dd>
                        </div>
                        <div class="flex justify-between border-b pb-2">
                            <dt class="text-gray-600">Toy:</dt>
                            <dd class="font-semibold text-gray-800">@Model.Toy.ToyName</dd>
                        </div>
                        <div class="flex justify-between border-b pb-2">
                            <dt class="text-gray-600">Quantity:</dt>
                            <dd class="font-semibold text-gray-800">@Model.Quantity</dd>
                        </div>
                        <div class="flex justify-between border-b pb-2">
                            <dt class="text-gray-600">Total Price:</dt>
                            <dd class="font-bold text-primary text-lg">$@Model.TotalPrice.ToString("F2")</dd>
                        </div>
                    </dl>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
                <form method="post" asp-action="Delete" class="flex-1">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="OrderID" />
                    <button type="submit" 
                            class="w-full py-3 bg-red-500 text-white font-bold rounded-lg hover:bg-red-600 shadow-lg hover:shadow-xl transition-all duration-300">
                        <i class="fas fa-trash-alt mr-2"></i> Confirm Delete
                    </button>
                </form>
                <a asp-action="Index" 
                   class="flex-1 py-3 bg-gray-200 text-gray-700 font-bold rounded-lg hover:bg-gray-300 transition-colors text-center">
                    <i class="fas fa-times mr-2"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
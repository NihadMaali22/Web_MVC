@model IEnumerable<lily.Models.Order>

@{
    ViewData["Title"] = "My Order History";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>My Order History</h2>
            <hr />

            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Toy</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>@order.OrderID</td>
                                            <td>@order.Toy.ToyName</td>
                                            <td>@order.Quantity</td>
                                            <td>$@order.TotalPrice.ToString("F2")</td>
                                            <td>@order.OrderDate?.ToString("MM/dd/yyyy")</td>
                                            <td>
                                                <span class="badge bg-@(order.Status == "Completed" ? "success" : order.Status == "Pending" ? "warning" : order.Status == "Cancelled" ? "danger" : "info")">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@order.OrderID" class="btn btn-sm btn-info">View</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-3">
                            <strong>Total Orders:</strong> @Model.Count()
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4>No orders found</h4>
                    <p>You haven't placed any orders yet.</p>
                    <a asp-controller="Toys" asp-action="Index" class="btn btn-primary">Browse Toys</a>
                </div>
            }
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded-lg shadow-md animate-slide-down">
        <div class="flex items-center">
            <i class="fas fa-check-circle text-green-500 text-2xl mr-3"></i>
            <div>
                <p class="font-semibold text-green-800">Success!</p>
                <p class="text-green-700">@TempData["SuccessMessage"]</p>
            </div>
            <button onclick="this.parentElement.parentElement.remove()" class="ml-auto text-green-500 hover:text-green-700">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
}


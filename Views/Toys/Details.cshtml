@model lily.Models.Toy

@{
    ViewData["Title"] = "Toy Details";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    @await Html.PartialAsync("_Notifications")
    
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 p-8">
            <!-- Image Section -->
            <div>
                @{
                    var imageUrl = Model.ImageUrl;
                    if (!string.IsNullOrEmpty(imageUrl))
                    {
                        if (!imageUrl.StartsWith("/") && !imageUrl.StartsWith("http"))
                        {
                            imageUrl = "/images/" + imageUrl;
                        }
                    }
                }
                @if (!string.IsNullOrEmpty(imageUrl))
                {
                    <img src="@imageUrl" 
                         alt="@Model.ToyName" 
                         class="w-full h-96 object-cover rounded-xl shadow-lg" 
                         onerror="this.src='/images/placeholder.png'; this.onerror=null;" />
                }
                else
                {
                    <div class="w-full h-96 bg-gradient-to-br from-pink-100 to-purple-100 rounded-xl shadow-lg flex items-center justify-center">
                        <div class="text-center">
                            <i class="fas fa-image text-gray-300 text-6xl mb-4"></i>
                            <p class="text-gray-400 text-lg">No Image Available</p>
                        </div>
                    </div>
                }
            </div>

            <!-- Details Section -->
            <div class="flex flex-col">
                <div class="mb-6">
                    <h1 class="text-4xl font-bold text-gray-800 mb-2">@Model.ToyName</h1>
                    <div class="h-1 w-20 bg-gradient-to-r from-primary to-secondary rounded"></div>
                </div>
                
                <div class="mb-6">
                    <div class="text-5xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                        $@Model.Price.ToString("F2")
                    </div>
                </div>
                
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">
                        <i class="fas fa-info-circle text-primary mr-2"></i> Description
                    </h3>
                    <p class="text-gray-600 leading-relaxed">@Model.Description</p>
                </div>
                
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">
                        <i class="fas fa-boxes text-primary mr-2"></i> Availability
                    </h3>
                    @if (Model.Stock > 0)
                    {
                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                            <i class="fas fa-check-circle mr-2"></i> @Model.Stock units in stock
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-red-100 text-red-800">
                            <i class="fas fa-times-circle mr-2"></i> Out of stock
                        </span>
                    }
                </div>
                
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">
                        <i class="fas fa-tag text-primary mr-2"></i> Status
                    </h3>
                    @if (Model.IsActive == true)
                    {
                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-blue-100 text-blue-800">
                            <i class="fas fa-circle text-blue-500 mr-2 animate-pulse"></i> Active
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-gray-100 text-gray-800">
                            <i class="fas fa-circle text-gray-500 mr-2"></i> Inactive
                        </span>
                    }
                </div>
                
                @if (Model.Stock > 0 && Model.IsActive == true)
                {
                    <form method="post" asp-controller="Orders" asp-action="PlaceOrder" class="mb-6">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="toyId" value="@Model.ToyID" />
                        
                        <div class="bg-gradient-to-r from-pink-50 to-purple-50 p-6 rounded-xl mb-4">
                            <label for="quantity" class="block text-gray-700 font-semibold mb-2">
                                <i class="fas fa-shopping-cart text-primary mr-2"></i> Quantity
                            </label>
                            <input type="number" 
                                   class="w-32 px-4 py-2 rounded-lg border-2 border-gray-300 focus:border-primary focus:outline-none transition-colors" 
                                   id="quantity" 
                                   name="quantity" 
                                   value="1" 
                                   min="1" 
                                   max="@Model.Stock" />
                        </div>
                        
                        <button type="submit" 
                                class="w-full py-4 bg-gradient-to-r from-primary to-secondary text-white font-bold text-lg rounded-xl shadow-lg hover:shadow-2xl transform hover:scale-105 transition-all duration-300">
                            <i class="fas fa-cart-plus mr-2"></i> Add to Cart
                        </button>
                    </form>
                }
                else
                {
                    <div class="bg-gray-100 text-gray-500 py-4 px-6 rounded-xl text-center font-semibold mb-6">
                        <i class="fas fa-ban mr-2"></i> Currently Unavailable
                    </div>
                }
                
                <div class="flex flex-wrap gap-3 mt-auto">
                    <a asp-action="Index" 
                       class="flex-1 px-6 py-3 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition-colors text-center">
                        <i class="fas fa-arrow-left mr-2"></i> Back to Toys
                    </a>
                    @if (ViewBag.IsAdmin == true)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.ToyID" 
                           class="px-6 py-3 bg-yellow-500 text-white font-semibold rounded-lg hover:bg-yellow-600 transition-colors text-center">
                            <i class="fas fa-edit mr-2"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.ToyID" 
                           class="px-6 py-3 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600 transition-colors text-center">
                            <i class="fas fa-trash mr-2"></i> Delete
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<lily.Models.Toy>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="bg-gradient-to-r from-primary to-secondary text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        @await Html.PartialAsync("_Notifications")
        
        <div class="text-center">
            <h1 class="text-5xl md:text-6xl font-bold mb-6 animate-bounce">
                🦋 Welcome to maryoma Toy Store 🦋
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-pink-100">
                Discover magical toys that bring joy and wonder to every child!
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a asp-controller="Toys" asp-action="Index" 
                   class="px-8 py-4 bg-white text-primary font-bold rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300">
                    <i class="fas fa-shopping-cart mr-2"></i> Shop Now
                </a>
                <a asp-controller="Home" asp-action="About" 
                   class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full hover:bg-white hover:text-primary transition-all duration-300">
                    <i class="fas fa-info-circle mr-2"></i> Learn More
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Featured Toys Section -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-800 mb-4">
            <i class="fas fa-star text-yellow-400"></i> Featured Toys <i class="fas fa-star text-yellow-400"></i>
        </h2>
        <p class="text-gray-600 text-lg">
            Check out our amazing collection of toys!
        </p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var toy in Model)
            {
                @await Html.PartialAsync("_ToyCard", toy)
            }
        </div>
    }
    else
    {
        <div class="text-center py-20">
            <i class="fas fa-box-open text-gray-300 text-6xl mb-4"></i>
            <p class="text-gray-500 text-xl">No toys available at the moment.</p>
        </div>
    }
</div>

<!-- Features Section -->
<div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center p-8 rounded-2xl bg-gradient-to-br from-pink-50 to-purple-50 shadow-lg transform hover:scale-105 transition-all duration-300">
                <div class="w-20 h-20 mx-auto mb-4 bg-primary rounded-full flex items-center justify-center">
                    <i class="fas fa-shipping-fast text-white text-3xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">Fast Delivery</h3>
                <p class="text-gray-600">Get your toys delivered quickly and safely</p>
            </div>
            
            <div class="text-center p-8 rounded-2xl bg-gradient-to-br from-pink-50 to-purple-50 shadow-lg transform hover:scale-105 transition-all duration-300">
                <div class="w-20 h-20 mx-auto mb-4 bg-secondary rounded-full flex items-center justify-center">
                    <i class="fas fa-shield-alt text-white text-3xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">Safe & Tested</h3>
                <p class="text-gray-600">All toys meet safety standards</p>
            </div>
            
            <div class="text-center p-8 rounded-2xl bg-gradient-to-br from-pink-50 to-purple-50 shadow-lg transform hover:scale-105 transition-all duration-300">
                <div class="w-20 h-20 mx-auto mb-4 bg-accent rounded-full flex items-center justify-center">
                    <i class="fas fa-headset text-white text-3xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">24/7 Support</h3>
                <p class="text-gray-600">We're here to help anytime</p>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    @await Html.PartialAsync("_Notifications")

    <!-- Dashboard Header -->
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">
            <i class="fas fa-tachometer-alt text-primary"></i> Admin Dashboard
        </h1>
        <p class="text-gray-600">Welcome back! Here's what's happening with your toy store.</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Toys -->
        <div class="bg-gradient-to-br from-pink-500 to-pink-600 rounded-2xl shadow-lg p-6 text-white transform hover:scale-105 transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <p class="text-pink-100 text-sm font-medium">Total Toys</p>
                    <h3 class="text-4xl font-bold mt-2">@(ViewBag.TotalToys ?? 0)</h3>
                </div>
                <div class="bg-white bg-opacity-20 p-4 rounded-xl">
                    <i class="fas fa-cubes text-3xl"></i>
                </div>
            </div>
            <div class="flex items-center text-pink-100 text-sm">
                <i class="fas fa-arrow-up mr-2"></i>
                <span>All products</span>
            </div>
        </div>

        <!-- Total Orders -->
        <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-2xl shadow-lg p-6 text-white transform hover:scale-105 transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <p class="text-green-100 text-sm font-medium">Total Orders</p>
                    <h3 class="text-4xl font-bold mt-2">@(ViewBag.TotalOrders ?? 0)</h3>
                </div>
                <div class="bg-white bg-opacity-20 p-4 rounded-xl">
                    <i class="fas fa-shopping-cart text-3xl"></i>
                </div>
            </div>
            <div class="flex items-center text-green-100 text-sm">
                <i class="fas fa-check-circle mr-2"></i>
                <span>All time</span>
            </div>
        </div>

        <!-- Total Users -->
        <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl shadow-lg p-6 text-white transform hover:scale-105 transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <p class="text-blue-100 text-sm font-medium">Total Users</p>
                    <h3 class="text-4xl font-bold mt-2">@(ViewBag.TotalUsers ?? 0)</h3>
                </div>
                <div class="bg-white bg-opacity-20 p-4 rounded-xl">
                    <i class="fas fa-users text-3xl"></i>
                </div>
            </div>
            <div class="flex items-center text-blue-100 text-sm">
                <i class="fas fa-user-plus mr-2"></i>
                <span>Registered members</span>
            </div>
        </div>

        <!-- Pending Orders -->
        <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl shadow-lg p-6 text-white transform hover:scale-105 transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <p class="text-orange-100 text-sm font-medium">Pending Orders</p>
                    <h3 class="text-4xl font-bold mt-2">@(ViewBag.PendingOrders ?? 0)</h3>
                </div>
                <div class="bg-white bg-opacity-20 p-4 rounded-xl">
                    <i class="fas fa-clock text-3xl"></i>
                </div>
            </div>
            <div class="flex items-center text-orange-100 text-sm">
                <i class="fas fa-exclamation-circle mr-2"></i>
                <span>Needs attention</span>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-primary to-secondary p-6">
                <h2 class="text-2xl font-bold text-white flex items-center">
                    <i class="fas fa-bolt mr-3"></i> Quick Actions
                </h2>
            </div>
            <div class="p-6 space-y-3">
                <a asp-controller="Toys" asp-action="Create" 
                   class="flex items-center justify-between w-full p-4 bg-gradient-to-r from-green-50 to-green-100 hover:from-green-100 hover:to-green-200 rounded-xl transition-all duration-300 group">
                    <div class="flex items-center space-x-3">
                        <div class="bg-green-500 text-white p-3 rounded-lg group-hover:scale-110 transition-transform">
                            <i class="fas fa-plus-circle text-xl"></i>
                        </div>
                        <div>
                            <p class="font-semibold text-gray-800">Add New Toy</p>
                            <p class="text-sm text-gray-500">Create a new product</p>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400 group-hover:text-green-600 group-hover:translate-x-2 transition-all"></i>
                </a>

                <a asp-controller="Toys" asp-action="Index" 
                   class="flex items-center justify-between w-full p-4 bg-gradient-to-r from-pink-50 to-pink-100 hover:from-pink-100 hover:to-pink-200 rounded-xl transition-all duration-300 group">
                    <div class="flex items-center space-x-3">
                        <div class="bg-pink-500 text-white p-3 rounded-lg group-hover:scale-110 transition-transform">
                            <i class="fas fa-cubes text-xl"></i>
                        </div>
                        <div>
                            <p class="font-semibold text-gray-800">Manage Toys</p>
                            <p class="text-sm text-gray-500">Edit or delete products</p>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400 group-hover:text-pink-600 group-hover:translate-x-2 transition-all"></i>
                </a>

                <a asp-controller="Orders" asp-action="Index" 
                   class="flex items-center justify-between w-full p-4 bg-gradient-to-r from-blue-50 to-blue-100 hover:from-blue-100 hover:to-blue-200 rounded-xl transition-all duration-300 group">
                    <div class="flex items-center space-x-3">
                        <div class="bg-blue-500 text-white p-3 rounded-lg group-hover:scale-110 transition-transform">
                            <i class="fas fa-shopping-bag text-xl"></i>
                        </div>
                        <div>
                            <p class="font-semibold text-gray-800">View All Orders</p>
                            <p class="text-sm text-gray-500">Manage customer orders</p>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400 group-hover:text-blue-600 group-hover:translate-x-2 transition-all"></i>
                </a>

                <a asp-controller="Account" asp-action="ManageUsers" 
                   class="flex items-center justify-between w-full p-4 bg-gradient-to-r from-purple-50 to-purple-100 hover:from-purple-100 hover:to-purple-200 rounded-xl transition-all duration-300 group">
                    <div class="flex items-center space-x-3">
                        <div class="bg-purple-500 text-white p-3 rounded-lg group-hover:scale-110 transition-transform">
                            <i class="fas fa-users-cog text-xl"></i>
                        </div>
                        <div>
                            <p class="font-semibold text-gray-800">Manage Users</p>
                            <p class="text-sm text-gray-500">User administration</p>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400 group-hover:text-purple-600 group-hover:translate-x-2 transition-all"></i>
                </a>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-secondary to-primary p-6">
                <h2 class="text-2xl font-bold text-white flex items-center">
                    <i class="fas fa-history mr-3"></i> Recent Activity
                </h2>
            </div>
            <div class="p-6">
                @if (ViewBag.RecentOrders != null && ((IEnumerable<lily.Models.Order>)ViewBag.RecentOrders).Any())
                {
                    <div class="space-y-4">
                        @foreach (var order in (IEnumerable<lily.Models.Order>)ViewBag.RecentOrders)
                        {
                            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors">
                                <div class="flex items-center space-x-4">
                                    <div class="bg-gradient-to-br from-primary to-secondary text-white w-12 h-12 rounded-full flex items-center justify-center font-bold">
                                        #@order.OrderID
                                    </div>
                                    <div>
                                        <p class="font-semibold text-gray-800">@order.User.Username</p>
                                        <p class="text-sm text-gray-500">
                                            <i class="fas fa-cube mr-1"></i> @order.Toy.ToyName
                                        </p>
                                        <p class="text-xs text-gray-400">
                                            <i class="fas fa-calendar mr-1"></i> @(order.OrderDate?.ToString("MMM dd, yyyy") ?? "N/A")
                                        </p>
                                    </div>
                                </div>
                                <div>
                                    @if (order.Status == "Pending")
                                    {
                                        <span class="px-4 py-2 bg-orange-100 text-orange-700 rounded-full text-sm font-semibold">
                                            <i class="fas fa-clock mr-1"></i> Pending
                                        </span>
                                    }
                                    else if (order.Status == "Completed")
                                    {
                                        <span class="px-4 py-2 bg-green-100 text-green-700 rounded-full text-sm font-semibold">
                                            <i class="fas fa-check-circle mr-1"></i> Completed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-semibold">
                                            @order.Status
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="mt-6">
                        <a asp-controller="Orders" asp-action="Index" 
                           class="block text-center py-3 px-4 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-lg hover:shadow-lg transition-all duration-300">
                            <i class="fas fa-list mr-2"></i> View All Orders
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-inbox text-gray-300 text-6xl mb-4"></i>
                        <p class="text-gray-500 text-lg font-medium">No recent activity</p>
                        <p class="text-gray-400 text-sm">Orders will appear here when customers make purchases</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

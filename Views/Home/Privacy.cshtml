@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    @await Html.PartialAsync("_Notifications")
    
    <!-- Header -->
    <div class="bg-gradient-to-r from-primary to-secondary text-white rounded-2xl p-12 mb-12 text-center">
        <h1 class="text-5xl font-bold mb-4">Privacy Policy</h1>
        <p class="text-xl text-pink-100">Your privacy is important to us</p>
    </div>

    <div class="bg-white rounded-2xl shadow-xl p-8">
        <div class="prose prose-lg max-w-none">
            <!-- Introduction -->
            <section class="mb-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-shield-alt text-primary mr-3"></i> Introduction
                </h2>
                <p class="text-gray-600 leading-relaxed">
                    At Lily's Toy Store, we are committed to protecting your privacy and ensuring the security of your personal information. 
                    This Privacy Policy explains how we collect, use, disclose, and safeguard your information when you visit our website 
                    and make purchases from our store.
                </p>
            </section>

            <!-- Information We Collect -->
            <section class="mb-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-database text-primary mr-3"></i> Information We Collect
                </h2>
                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-xl font-semibold text-gray-800 mb-3">Personal Information</h3>
                    <ul class="list-disc list-inside space-y-2 text-gray-600 mb-4">
                        <li>Name and contact information (email address, phone number)</li>
                        <li>Billing and shipping addresses</li>
                        <li>Payment information (processed securely)</li>
                        <li>Account credentials (username and password)</li>
                    </ul>
                    
                    <h3 class="text-xl font-semibold text-gray-800 mb-3">Usage Information</h3>
                    <ul class="list-disc list-inside space-y-2 text-gray-600">
                        <li>Browser type and version</li>
                        <li>Pages visited and time spent on our site</li>
                        <li>Products viewed and purchased</li>
                        <li>IP address and location data</li>
                    </ul>
                </div>
            </section>

            <!-- How We Use Your Information -->
            <section class="mb-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-cogs text-primary mr-3"></i> How We Use Your Information
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="bg-blue-50 rounded-lg p-4">
                        <i class="fas fa-check-circle text-blue-500 mr-2"></i>
                        <span class="text-gray-700">Process and fulfill your orders</span>
                    </div>
                    <div class="bg-blue-50 rounded-lg p-4">
                        <i class="fas fa-check-circle text-blue-500 mr-2"></i>
                        <span class="text-gray-700">Send order confirmations and updates</span>
                    </div>
                    <div class="bg-blue-50 rounded-lg p-4">
                        <i class="fas fa-check-circle text-blue-500 mr-2"></i>
                        <span class="text-gray-700">Improve our products and services</span>
                    </div>
                    <div class="bg-blue-50 rounded-lg p-4">
                        <i class="fas fa-check-circle text-blue-500 mr-2"></i>
                        <span class="text-gray-700">Communicate special offers and promotions</span>
                    </div>
                </div>
            </section>

            <!-- Data Security -->
            <section class="mb-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-lock text-primary mr-3"></i> Data Security
                </h2>
                <p class="text-gray-600 leading-relaxed">
                    We implement appropriate technical and organizational security measures to protect your personal information 
                    against unauthorized access, alteration, disclosure, or destruction. However, no method of transmission over 
                    the internet is 100% secure, and we cannot guarantee absolute security.
                </p>
            </section>

            <!-- Your Rights -->
            <section class="mb-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-user-shield text-primary mr-3"></i> Your Rights
                </h2>
                <div class="bg-gradient-to-r from-pink-50 to-purple-50 rounded-lg p-6">
                    <p class="text-gray-700 mb-4">You have the right to:</p>
                    <ul class="space-y-2 text-gray-600">
                        <li class="flex items-start">
                            <i class="fas fa-arrow-right text-primary mr-2 mt-1"></i>
                            <span>Access and receive a copy of your personal data</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-arrow-right text-primary mr-2 mt-1"></i>
                            <span>Correct or update your personal information</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-arrow-right text-primary mr-2 mt-1"></i>
                            <span>Request deletion of your personal data</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-arrow-right text-primary mr-2 mt-1"></i>
                            <span>Opt-out of marketing communications</span>
                        </li>
                    </ul>
                </div>
            </section>

            <!-- Contact Us -->
            <section class="mb-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-envelope text-primary mr-3"></i> Contact Us
                </h2>
                <p class="text-gray-600 leading-relaxed mb-4">
                    If you have any questions about this Privacy Policy or our data practices, please contact us:
                </p>
                <div class="bg-gray-50 rounded-lg p-6">
                    <p class="text-gray-700"><strong>Email:</strong> privacy@lilystoystore.com</p>
                    <p class="text-gray-700"><strong>Phone:</strong> 1-800-TOY-LILY</p>
                    <p class="text-gray-700"><strong>Address:</strong> 123 Toy Street, Play City, PC 12345</p>
                </div>
            </section>

            <!-- Last Updated -->
            <section class="border-t pt-6">
                <p class="text-gray-500 text-sm">
                    <i class="fas fa-calendar-alt mr-2"></i>
                    Last Updated: December 31, 2025
                </p>
            </section>
        </div>
    </div>

    <!-- Back Button -->
    <div class="text-center mt-8">
        <a asp-action="Index" 
           class="inline-block px-8 py-3 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <i class="fas fa-home mr-2"></i> Back to Home
        </a>
    </div>
</div>
